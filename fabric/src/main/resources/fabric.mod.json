{
  "schemaVersion": 1,
  "id": "infinity",
  "version": "${version}",
  "name": "Infinite Dimensions",
  "description": "Inspired by 2020's April Fools' 20w14infinite Snapshot, this mod brings endless randomly generated dimensions into Minecraft.",
  "authors": [
    "Lera Riemann",
    "cassiancc"
  ],
  "contact": {
    "homepage": "https://github.com/LeraRiemann",
    "sources": "https://github.com/LeraRiemann/ProjectInfinity",
    "issues": "https://github.com/LeraRiemann/ProjectInfinity/issues"

  },
  "license": "GNU LGPLv3",
  "icon": "assets/infinity/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.lerariemann.infinity.fabric.InfinityModFabric"
    ],
    "client": [
      "net.lerariemann.infinity.fabric.client.InfinityModFabricClient"
    ],
    "modmenu": [
      "net.lerariemann.infinity.compat.fabric.ModMenuCompat"
    ],
    "emi": [
      "net.lerariemann.infinity.compat.emi.EmiCompat"
    ]
  },
  "mixins": [
    "infinity.mixins.json",
    "infinity-fabric.mixins.json",
    "dynreg.mixins.json"
  ],
  "accessWidener" : "infinity.accesswidener",

  "depends": {
    "fabricloader": ">=0.15.11",
    "fabric-api": "*",
    "minecraft": "~1.20.1",
    "java": ">=17",
    "architectury": "*"
  },
  "suggests": {
    "cloth-config": "*",
    "modmenu": "*",
    "create": ">6.0.0"
  },
  "custom": {
    "lithium:options": {
      "mixin.ai.poi.fast_portals": false
    }
  }
}
